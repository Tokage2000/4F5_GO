<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
    fx:controller="GO.pages.accueil.VueAccueil" styleClass="fenetrePrincipale">
    <BorderPane VBox.vgrow="ALWAYS">
        <top>
            <MenuBar>
                <menus>
                <Menu text="Partie locale">
                    <items>
                    <MenuItem fx:id="menuNouvellePartieLocale" styleClass="menu_item" text="Nouvelle partie"/>
                    <SeparatorMenuItem/>
                    <MenuItem fx:id="menuParametres" text="Parametres"/>
					<MenuItem fx:id="menuResultats" text="Resultats"/>
					<MenuItem fx:id="menuReplay" text="Replay"/>
                    <MenuItem fx:id="menuQuitter" text="Quitter"/>
                    </items>
                </Menu>
            </menus>
            </MenuBar>
        </top>
        <center>
        <HBox alignment="center">
			<VBox fx:id="conteneurPartie" alignment="center" HBox.hgrow="ALWAYS"/>
		</HBox>
        </center>
    </BorderPane>
</VBox>
