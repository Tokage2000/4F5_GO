<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>

<VBox xmlns:fx="http://javafx.com/fxml" alignment="center" styleClass="conteneurPrincipal" fx:controller="GO.pages.resultats.vues.VueResultats"  VBox.vgrow="ALWAYS">
	<HBox VBox.vgrow="ALWAYS">
		<VBox xmlns:id="conteneurTableResultats" styleClass="resultats" HBox.hgrow="ALWAYS">

			<HBox alignment="CENTER" VBox.vgrow="ALWAYS"> 
				<Text textAlignment="CENTER" styleClass="result" text="%Verdicte"/>
				<Text textAlignment="CENTER" styleClass="result" text=" N/A" fx:id="verdicte" />
			</HBox>
			<HBox alignment="CENTER" VBox.vgrow="ALWAYS">
				<Text textAlignment="CENTER" styleClass="result"  text="%pionsBlanc"/>
				<Text textAlignment="CENTER" styleClass="result"  text=" N/A" fx:id="blanc"/>
			</HBox>
			<HBox alignment="CENTER" VBox.vgrow="ALWAYS">
				<Text textAlignment="CENTER" styleClass="result" text="%pionsNoirs"/>
				<Text textAlignment="CENTER" styleClass="result"  text=" N/A" fx:id="noir"/>
			</HBox>
			<HBox alignment="CENTER" VBox.vgrow="ALWAYS">
				<Text textAlignment="CENTER"  styleClass="result" text = "Komi:"/> 
				<Text textAlignment="CENTER" styleClass="result"  text=" 0.5" fx:id="komi"/>
			</HBox>
			<HBox alignment="CENTER" VBox.vgrow="ALWAYS">
				<Text textAlignment="CENTER" styleClass="result" text = "%TailleGrille"/>
				<Text textAlignment="CENTER" styleClass="result"  text=" N/A" fx:id="taille"/>
			</HBox>
		</VBox>
	</HBox>

	<HBox alignment="center">
		<Button text="%Acceuil" fx:id="accueil" />
		<Button text="%quitter" fx:id="quitter" />
	</HBox>

</VBox>
